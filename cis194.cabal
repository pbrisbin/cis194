                      , containers
                      , parsec

test-suite spec
  type:                 exitcode-stdio-1.0
  default-language:     Haskell2010
  hs-source-dirs:       test
  main-is:              Spec.hs
  build-depends:        base
                      , hspec
                      , cis194
                      , transformers
                      , QuickCheck
