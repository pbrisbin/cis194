license:                MIT
build-type:             Simple
cabal-version:          >= 1.18

library
  default-language:     Haskell2010
  hs-source-dirs:       src
  exposed-modules:      HW1
                      , Log
                      , LogAnalysis
                      , Golf
                      , HW4
                      , ExprT
                      , Parser
                      , Calc
